---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { map } from 'astro/zod';
import FormattedDate from '../components/FormattedDate.astro';

const heroImage = '/wladimirmoya.svg';
const heroImageAlt = 'Logo de Wladimir Moya';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
		<style>
			a {
				display: flex;
				align-items: center;
				margin: 10px 0;
				padding: 10px;
				text-decoration: none;
				background-color: #f1f5f9;
				border-radius: 5px;
			}
			a:hover {
				background-color: #e8f6ff;
			}
			a:hover h2 {
				color: #09f;
			}
			a:hover img {
				transform: scale(1.1);
			}
			picture {
				display: flex;
			}
			.img {
				width: 48px;
				height: 48px;
				margin-right: 15px;
				object-fit: contain;
				transition: transform ease .3s;
			}
			.title-post {
				margin: 0;
				color: #444;
				font-size: 18px;
				font-weight: 600;
			}
			.info {
				color: #535353;
				font-size: 12px;
				padding-top: 4px;
			}
			h3 {
				font-size: 16px;
				font-weight: bold;
				margin: 32px 0;
			}
		</style>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<section>
				<img src={heroImage} alt={heroImageAlt}>
			</section>
			<section>
				<h3>Últimos artículos</h3>
				{
					posts.map((post)=> (
						<a href={`/blog/${post.slug}/`}>
							<picture>
								<img class="img" src={post.data.heroImage} alt={post.data.description} />
							</picture>
							<div>
								<h2 class="title-post">{post.data.title}</h2>
								<time class="info">
									{new Date(post.data.pubDate).toLocaleDateString('es', {
										year: 'numeric',
										month: 'long',
										day: 'numeric',
									})}
								</time>
							</div>
						</a>
					))
				}
			</section>
			<!-- <section>
				<h3>Últimos artículos</h3>
				{posts.map((post) =>(
					<a href={`/blog/${post.slug}/`}>
						<picture>
							<img class="img" src={post.data.mainImage} alt={post.data.alt} />
						</picture>
						<div>
							<h2 class="title-post">{post.frontmatter.title}</h2>
							<time class="info" datetime={post.frontmatter.pubDate}>
									{new Date(post.frontmatter.pubDate).toLocaleDateString('es', {
										year: 'numeric',
										month: 'long',
										day: 'numeric',
									})}
							</time>
						</div>
					</a>
				))}
			</section> -->
		</main>
		<Footer />
	</body>
</html>
