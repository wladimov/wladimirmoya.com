---
import { SITE_TITLE } from '../consts';
import HeaderSocial from './HeaderSocial.astro';
---

<header>
	<section>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<HeaderSocial />
	</section>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	section {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	h2 a {
		color: black;
		text-decoration: none;
	}
	h2 {
		transition: transform ease .3s;
	}
	h2:hover {
		transform: scale(1.1);
	}
</style>